{
  "appenders": [
    { 
      "type": "console",
      "category": "console"
    }, 
    {
      "type": "dateFile", 
      "filename": "app",
      "pattern": "-yyyyMMddhh.log",
      "alwaysIncludePattern": true, 
      "maxLogSize": 30720,
      "backups": 10,
      "category": "logApp"
    },
    {
      "type": "dateFile", 
      "filename": "daily",
      "pattern": "-yyyyMMddhh.log",
      "alwaysIncludePattern": true,
      "maxLogSize": 61440,
      "backups": 10,
      "category": "logDaily"
    }
  ],
  "replaceConsole": true,
  "levels": {
    "logInfo": "INFO"
  }
}